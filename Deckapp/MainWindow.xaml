<Window x:Class="Deckapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Deckapp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Slider x:Name="testSlider" Minimum="0" Maximum="1" ValueChanged="Slider_ValueChanged" HorizontalAlignment="Left" Margin="45,61,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox Name="testSelect" HorizontalAlignment="Left" SelectedIndex="0" SelectionChanged="testSelect_SelectionChanged" Margin="45,22,0,0" VerticalAlignment="Top" Width="120"/>
        <ProgressBar Name="MasterVolume" Minimum="0" Maximum="1" HorizontalAlignment="Left" Height="10" Margin="45,89,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
